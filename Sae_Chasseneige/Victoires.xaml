    </Window.Background>
    <Grid Margin="0,0,0,260">

        <Button
        x:Name="Continuer"
        Canvas.Left="300"
        Canvas.Top="150"
        Width="200"
        Height="50"
        Background="Blue"
        Content="CONTINUER"
        FontSize="20"
        Foreground="White" RenderTransformOrigin="0.503,1.875" Margin="297,332,0,-192" HorizontalAlignment="Left" Click="Continuer_Click" />
    </Grid>
</Window>
